<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_chronometr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.project_camera.Chronometr"
    tools:showIn="@layout/activity_chronometr">

    <Button
        android:text="Остановить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Stop"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/Start"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Начать"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:id="@+id/Start"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/Stop"
        android:layout_alignEnd="@+id/Stop"
        android:layout_alignLeft="@+id/Stop"
        android:layout_alignStart="@+id/Stop" />

    <Button
        android:text="Очистить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Clean"
        android:layout_alignTop="@+id/Stop"
        android:layout_alignRight="@+id/Stop"
        android:layout_alignEnd="@+id/Stop"
        android:layout_marginTop="48dp"
        android:layout_alignLeft="@+id/Stop"
        android:layout_alignStart="@+id/Stop" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer2"
        android:layout_above="@+id/Start"
        android:layout_alignLeft="@+id/Start"
        android:layout_alignStart="@+id/Start"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="103dp" />
</RelativeLayout>
